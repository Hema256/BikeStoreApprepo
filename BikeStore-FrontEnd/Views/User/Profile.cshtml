@model BikeStore_FrontEnd.Dto.UserDTO

@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

<dl class="row">
    <dt class="col-sm-2">User Name:</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Email:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Role:</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<a asp-action="UpdateProfile" class="btn btn-secondary">Edit Profile</a>

<form asp-action="Logout" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>
