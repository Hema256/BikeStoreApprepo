@model IEnumerable<BikeStore_FrontEnd.Dto.ProductDTO>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            width:99%;
            background-image: url(https://hips.hearstapps.com/vader-prod.s3.amazonaws.com/1712081598-santa-cruz-heckler-sl-1-6567823e0d7af.jpg?crop=0.817xw:0.815xh;0.0962xw,0.0767xh&resize=980:*); /* Path to your bike image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            color: #fff; /* Set text color to white */
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7); /* Dark semi-transparent background for the container */
            border-radius: 8px;
            padding: 20px;
            margin-top: 50px; /* Adjust margin to center vertically */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        h1 {
            color: #FFD700; /* Gold color for the title */
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            background-color: rgba(255, 255, 255, 0.9); /* Light background for the table */
            color: #333; /* Dark text color for better contrast */
        }

        th {
            background-color: #007bff; /* Blue background for table headers */
            color: white; /* White text for headers */
        }

        tr:hover {
            background-color: rgba(255, 255, 255, 0.2); /* Light hover effect */
        }

        td {
            vertical-align: middle; /* Center the content in table cells */
        }

        .btn {
            margin: 5px; /* Spacing for buttons */
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <h1>Product Index</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().ProductId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().StockQuantity)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: auto;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockQuantity)
                        </td>
                        <td><a asp-controller="Order" asp-action="Create" class="btn btn-primary" >Order</a> <br />
                            <a asp-controller="Review" asp-action="Create" class="btn btn-primary">AddReview</a> <br />
                        <a asp-controller="ShoppingCart" asp-action="AddToCart" class="btn btn-primary">AddtoCart</a></td>
                        @* Optional Action Links *@
                        @* <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger" })
                    </td> *@
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</body>
</html>
