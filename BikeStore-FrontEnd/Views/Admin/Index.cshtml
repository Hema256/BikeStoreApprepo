@{
    ViewData["Title"] = "Admin Control";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url(https://static.toiimg.com/photo/80452572.cms); /* Path to your bike image */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            color: #fff; /* Set text color to white */
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7); /* Dark semi-transparent background for the container */
            border-radius: 8px;
            padding: 40px;
            margin-top: 50px; /* Adjust margin for centering */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #FFD700; /* Gold color for the title */
            text-align: center;
            margin-bottom: 20px;
        }

        h3 {
            color: #ffcc00; /* Light yellow color for subheadings */
            margin-top: 20px;
        }

        p {
            text-align: center; /* Centered text for paragraphs */
        }

        ul {
            list-style-type: none; /* Remove default list styling */
            padding: 0;
        }

        li {
            margin: 10px 0; /* Spacing between list items */
            text-align: center; /* Center list items */
        }

        a {
            color: #007bff; /* Bootstrap link color */
            text-decoration: none; /* Remove underline from links */
            font-weight: bold; /* Bold text for links */
            transition: color 0.3s; /* Smooth color transition */
        }

        a:hover {
            color: #0056b3; /* Darker shade on hover */
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div>
            
            <ul>
                @* <li><a asp-controller="User" asp-action="Index">Manage Users</a></li> *@
                <li><a asp-controller="Product" asp-action="Index">Manage Products</a></li>
                <li><a asp-controller="Order" asp-action="Index">Manage Orders</a></li>
                <li><a asp-controller="Review" asp-action="Index">Manage Reviews</a></li>
                <li><a asp-controller="Category" asp-action="Index">Manage Category</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
